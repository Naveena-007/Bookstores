<h2>
  Add new Book
</h2>

<%= form_for @book do |f|%>
   <div class="form-group">
     <%= f.label :title %><br />
     <%= f.text_field :title , class:'form-control'%><br />
   </div>
   <div class="form-group">
     <%= f.label :isbn %><br />
     <%= f.text_field :isbn , class:'form-control'%><br />
   </div>
    <div class="form-group">
     <%= f.label :category %><br />
     <%= f.select :category_id, options_for_select(Category.all.pluck(:name, :id), include_blank: 'Select One'), { class: 'form-control' } %><br /><br />
   </div>

   <div class="form-group">
     <%= f.label :authour %><br />
     <%= f.select :authour_id, options_for_select(Category.all.pluck(:name, :id), include_blank: 'Select One'), { class: 'form-control' } %><br /><br />
   </div>
   <div class="form-group">
     <%= f.label :Publisher %><br />
     <%= f.select :Publisher_id, options_for_select(Category.all.pluck(:name, :id), include_blank: 'Select One'), { class: 'form-control' } %><br /><br />
   </div>
    <div class="form-group">
     <%= f.label :formate %><br />
     <%= f.text_field :formate , class:'form-control'%><br />
    </div>
     <div class="form-group">
     <%= f.label :excerpt %><br />
     <%= f.text_area :excerpt , class:'form-control'%><br />
    </div>
     <div class="form-group">
     <%= f.label :pages %><br />
     <%= f.number_field :pages , class:'form-control'%><br />
    </div>
    <div class="form-group">
     <%= f.label :price %><br />
     <%= f.text_field :price , class:'form-control'%><br />
    </div>

     <div class="form-group">
     <%= f.label :buy %><br />
     <%= f.text_field :buy , class:'form-control'%><br />
    </div>
    
    <%= f.submit "Submit" , class:'btn btn-primary'%>
    <%= link_to "Cancel" , books_path , class:'btn btn-default'%>
<% end %>
